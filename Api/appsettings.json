{
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "Logs/log-{Date}.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} | {ThreadId} | {Level:u4} | {AppDomain} | {Logger} | {Message:lj}{NewLine}{Exception}"

        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ]
  }
}
